fun main() {
    // Float support
    var pi = 3.14159
    var radius = 5.0
    var area = pi * radius * radius
    println(area)
    
    // String concatenation
    var greeting = "Hello, "
    var name = "Dotlin"
    var message = greeting + name
    println(message)
    
    // String comparison
    var s1 = "apple"
    var s2 = "banana"
    if (s1 < s2) {
        println("apple comes before banana")
    }
    
    // String length property
    var text = "Type Safety!"
    var len = text.length
    println(len)
    
    // Type checking prevents this:
    // var bad = 10 + "hello"  // Would cause a type error
}
