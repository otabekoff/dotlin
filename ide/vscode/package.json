{
  "name": "dotlin-language",
  "displayName": "Dotlin Language Support",
  "description": "Language support for Dotlin (.lin files)",
  "version": "0.1.0",
  "publisher": "dotlin",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.108.0"
  },
  "type": "module",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "dotlin",
    "lin",
    "kotlin",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/otabekoff/dotlin"
  },
  "bugs": {
    "url": "https://github.com/otabekoff/dotlin/issues"
  },
  "homepage": "https://github.com/otabekoff/dotlin#readme",
  "scripts": {
    "package": "vsce package",
    "lint": "echo \"no lint configured\"",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "all": "npm run compile && npm run package && code --install-extension /home/otabek/Projects/langs/dotlin/ide/vscode/dotlin-language-0.1.0.vsix",
    "build:icon": "inkscape \"$PWD/images/icon.svg\" --export-type=png --export-filename=\"$PWD/images/icon.png\" -w 128 -h 128 || rsvg-convert -w 128 -h 128 -o \"$PWD/images/icon.png\" \"$PWD/images/icon.svg\" || echo \"Error: Install Inkscape or librsvg (rsvg-convert) to build the icon\""
  },
  "dependencies": {
    "shiki": "^3.21.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  },
  "contributes": {
    "languages": [
      {
        "id": "dotlin",
        "aliases": [
          "Dotlin",
          "dotlin"
        ],
        "extensions": [
          ".lin"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon.png",
          "dark": "./images/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "dotlin",
        "scopeName": "source.dotlin",
        "path": "./syntaxes/dotlin.tmLanguage.json"
      },
      {
        "scopeName": "markdown.dotlin.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "source.dotlin": "kotlin"
        }
      }
    ],
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./out/preview/highlight-dotlin.js"
    ],
    "snippets": [
      {
        "language": "dotlin",
        "path": "./snippets/dotlin.json"
      }
    ],
    "configuration": {
      "title": "Dotlin",
      "properties": {
        "dotlin.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Dotlin Language Server"
        },
        "dotlin.lsp.path": {
          "type": "string",
          "default": "dotlin-lsp",
          "description": "Path to Dotlin LSP server executable"
        }
      }
    },
    "commands": [
      {
        "command": "dotlin.evaluate",
        "title": "Dotlin: Evaluate Selection or Line"
      },
      {
        "command": "dotlin.restart",
        "title": "Dotlin: Restart / Refresh Diagnostics"
      }
    ],
    "iconThemes": [
      {
        "id": "dotlin-icons",
        "label": "Dotlin Icons",
        "path": "./icons/dotlin-icon-theme.json"
      }
    ]
  },
  "configurationDefaults": {
    "material-icon-theme.files.associations": {
      "*.lin": "file"
    },
    "material-icon-theme.folders.associations": {
      "dotlin": "folder",
      ".dotlin": "folder"
    }
  }
}
