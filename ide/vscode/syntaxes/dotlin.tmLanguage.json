{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dotlin",
  "scopeName": "source.dotlin",
  "patterns": [
    {
      "include": "#import"
    },
    {
      "include": "#package"
    },
    {
      "include": "#code"
    }
  ],
  "fileTypes": ["lin"],
  "repository": {
    "import": {
      "begin": "\\b(import)\\b\\s*",
      "beginCaptures": {
        "1": {
          "name": "storage.type.import.dotlin"
        }
      },
      "end": ";|$",
      "name": "meta.import.dotlin",
      "contentName": "entity.name.package.dotlin",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#hard-keywords"
        },
        {
          "match": "\\*",
          "name": "variable.language.wildcard.dotlin"
        }
      ]
    },
    "package": {
      "begin": "\\b(package)\\b\\s*",
      "beginCaptures": {
        "1": {
          "name": "storage.type.package.dotlin"
        }
      },
      "end": ";|$",
      "name": "meta.package.dotlin",
      "contentName": "entity.name.package.dotlin",
      "patterns": [
        {
          "include": "#comments"
        }
      ]
    },
    "code": {
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#annotation-simple"
        },
        {
          "include": "#annotation-site-list"
        },
        {
          "include": "#annotation-site"
        },
        {
          "include": "#class-declaration"
        },
        {
          "include": "#object-declaration"
        },
        {
          "include": "#type-alias"
        },
        {
          "include": "#function-declaration"
        },
        {
          "include": "#variable-declaration"
        },
        {
          "include": "#type-constraint"
        },
        {
          "include": "#type-annotation"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#method-reference"
        },
        {
          "include": "#key"
        },
        {
          "include": "#string"
        },
        {
          "include": "#string-empty"
        },
        {
          "include": "#string-multiline"
        },
        {
          "include": "#character"
        },
        {
          "include": "#lambda-arrow"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#self-reference"
        },
        {
          "include": "#decimal-literal"
        },
        {
          "include": "#hex-literal"
        },
        {
          "include": "#binary-literal"
        },
        {
          "include": "#boolean-literal"
        },
        {
          "include": "#null-literal"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "include": "#comment-line"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#comment-javadoc"
        }
      ]
    },
    "comment-line": {
      "begin": "//",
      "end": "$",
      "name": "comment.line.double-slash.dotlin"
    },
    "comment-block": {
      "begin": "/\\*(?!\\*)",
      "end": "\\*/",
      "name": "comment.block.dotlin"
    },
    "comment-javadoc": {
      "patterns": [
        {
          "begin": "/\\*\\*",
          "end": "\\*/",
          "name": "comment.block.javadoc.dotlin",
          "patterns": [
            {
              "match": "@(author|deprecated|return|see|serial|since|version)\\b",
              "name": "keyword.other.documentation.javadoc.dotlin"
            },
            {
              "match": "(@param)\\s+(\\S+)",
              "captures": {
                "1": {
                  "name": "keyword.other.documentation.javadoc.dotlin"
                },
                "2": {
                  "name": "variable.parameter.dotlin"
                }
              }
            },
            {
              "match": "(@(?:exception|throws))\\s+(\\S+)",
              "captures": {
                "1": {
                  "name": "keyword.other.documentation.javadoc.dotlin"
                },
                "2": {
                  "name": "entity.name.type.class.dotlin"
                }
              }
            },
            {
              "match": "{(@link)\\s+(\\S+)?#([\\w$]+\\s*\\([^\\(\\)]*\\)).*}",
              "captures": {
                "1": {
                  "name": "keyword.other.documentation.javadoc.dotlin"
                },
                "2": {
                  "name": "entity.name.type.class.dotlin"
                },
                "3": {
                  "name": "variable.parameter.dotlin"
                }
              }
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "include": "#prefix-modifiers"
        },
        {
          "include": "#postfix-modifiers"
        },
        {
          "include": "#soft-keywords"
        },
        {
          "include": "#hard-keywords"
        },
        {
          "include": "#control-keywords"
        }
      ]
    },
    "prefix-modifiers": {
      "match": "\\b(abstract|final|enum|open|annotation|sealed|data|override|final|lateinit|private|protected|public|internal|inner|companion|noinline|crossinline|vararg|reified|tailrec|operator|infix|inline|external|const|suspend|value)\\b",
      "name": "storage.modifier.other.dotlin"
    },
    "postfix-modifiers": {
      "match": "\\b(where|by|get|set)\\b",
      "name": "storage.modifier.other.dotlin"
    },
    "soft-keywords": {
      "match": "\\b(catch|finally|field)\\b",
      "name": "keyword.soft.dotlin"
    },
    "hard-keywords": {
      "match": "\\b(as|typeof|is|in)\\b",
      "name": "keyword.hard.dotlin"
    },
    "control-keywords": {
      "match": "\\b(if|else|while|do|when|try|throw|break|continue|return|for)\\b",
      "name": "keyword.control.dotlin"
    },
    "annotation-simple": {
      "match": "(?<!\\w)@[\\w\\.]+\\b(?!:)",
      "name": "entity.name.type.annotation.dotlin"
    },
    "annotation-site-list": {
      "begin": "(?<!\\w)(@\\w+):\\s*\\[",
      "end": "\\]",
      "beginCaptures": {
        "1": {
          "name": "entity.name.type.annotation-site.dotlin"
        }
      },
      "patterns": [
        {
          "include": "#unescaped-annotation"
        }
      ]
    },
    "annotation-site": {
      "begin": "(?<!\\w)(@\\w+):\\s*(?!\\[)",
      "end": "$",
      "beginCaptures": {
        "1": {
          "name": "entity.name.type.annotation-site.dotlin"
        }
      },
      "patterns": [
        {
          "include": "#unescaped-annotation"
        }
      ]
    },
    "unescaped-annotation": {
      "match": "\\b[\\w\\.]+\\b",
      "name": "entity.name.type.annotation.dotlin"
    },
    "class-declaration": {
      "match": "\\b(class|interface)\\s+(\\b\\w+\\b|`[^`]+`)\\s*(?<GROUP><([^<>]|\\g<GROUP>)+>)?",
      "captures": {
        "1": {
          "name": "storage.type.class.dotlin"
        },
        "2": {
          "name": "entity.name.type.class.dotlin"
        },
        "3": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        }
      }
    },
    "object-declaration": {
      "match": "\\b(object)\\s+(\\b\\w+\\b|`[^`]+`)",
      "captures": {
        "1": {
          "name": "storage.type.object.dotlin"
        },
        "2": {
          "name": "entity.name.type.object.dotlin"
        }
      }
    },
    "type-alias": {
      "match": "\\b(typealias)\\s+(\\b\\w+\\b|`[^`]+`)\\s*(?<GROUP><([^<>]|\\g<GROUP>)+>)?",
      "captures": {
        "1": {
          "name": "storage.type.alias.dotlin"
        },
        "2": {
          "name": "entity.name.type.dotlin"
        },
        "3": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        }
      }
    },
    "function-declaration": {
      "match": "\\b(fun)\\b\\s*(?<GROUP><([^<>]|\\g<GROUP>)+>)?\\s*(?:(\\w+)\\.)?(\\b\\w+\\b|`[^`]+`)",
      "captures": {
        "1": {
          "name": "storage.type.function.dotlin"
        },
        "2": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        },
        "4": {
          "name": "entity.name.type.class.extension.dotlin"
        },
        "5": {
          "name": "entity.name.function.declaration.dotlin"
        }
      }
    },
    "variable-declaration": {
      "match": "\\b(val|var)\\b\\s*(?<GROUP><([^<>]|\\g<GROUP>)+>)?",
      "captures": {
        "1": {
          "name": "storage.type.variable.dotlin"
        },
        "2": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        }
      }
    },
    "type-parameter": {
      "patterns": [
        {
          "match": "\\b\\w+\\b",
          "name": "entity.name.type.dotlin"
        },
        {
          "match": "\\b(in|out)\\b",
          "name": "storage.modifier.dotlin"
        }
      ]
    },
    "type-annotation": {
      "match": "(?<![:?]):\\s*(\\w|\\?|\\s|->|(?<GROUP>[<(]([^<>()\"']|\\g<GROUP>)+[)>]))+",
      "captures": {
        "0": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        }
      }
    },
    "function-call": {
      "match": "\\??\\.?(\\b\\w+\\b|`[^`]+`)\\s*(?<GROUP><([^<>]|\\g<GROUP>)+>)?\\s*(?=[({])",
      "captures": {
        "1": {
          "name": "entity.name.function.call.dotlin"
        },
        "2": {
          "patterns": [
            {
              "include": "#type-parameter"
            }
          ]
        }
      }
    },
    "method-reference": {
      "match": "\\??::(\\b\\w+\\b|`[^`]+`)",
      "captures": {
        "1": {
          "name": "entity.name.function.reference.dotlin"
        }
      }
    },
    "key": {
      "match": "\\b(\\w=)\\s*(=)",
      "captures": {
        "1": {
          "name": "variable.parameter.dotlin"
        },
        "2": {
          "name": "keyword.operator.assignment.dotlin"
        }
      }
    },
    "string-empty": {
      "match": "(?<!\")\"\"(?!\")",
      "name": "string.quoted.double.dotlin"
    },
    "string": {
      "begin": "(?<!\")\"(?!\")",
      "end": "\"",
      "name": "string.quoted.double.dotlin",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.dotlin"
        },
        {
          "include": "#string-escape-simple"
        },
        {
          "include": "#string-escape-bracketed"
        }
      ]
    },
    "string-multiline": {
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "name": "string.quoted.double.dotlin",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.dotlin"
        },
        {
          "include": "#string-escape-simple"
        },
        {
          "include": "#string-escape-bracketed"
        }
      ]
    },
    "string-escape-simple": {
      "match": "(?<!\\\\)\\$\\w+\\b",
      "name": "variable.string-escape.dotlin"
    },
    "string-escape-bracketed": {
      "begin": "(?<!\\\\)(\\$\\{)",
      "end": "(\\})",
      "name": "meta.template.expression.dotlin",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.template-expression.begin"
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.template-expression.end"
        }
      },
      "patterns": [
        {
          "include": "#code"
        }
      ]
    },
    "character": {
      "begin": "'",
      "end": "'",
      "name": "string.quoted.single.dotlin",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.dotlin"
        }
      ]
    },
    "decimal-literal": {
      "match": "\\b\\d[\\d_]*(\\.[\\d_]+)?((e|E)\\d+)?(u|U)?(L|F|f)?\\b",
      "name": "constant.numeric.decimal.dotlin"
    },
    "hex-literal": {
      "match": "0(x|X)[A-Fa-f0-9][A-Fa-f0-9_]*(u|U)?",
      "name": "constant.numeric.hex.dotlin"
    },
    "binary-literal": {
      "match": "0(b|B)[01][01_]*",
      "name": "constant.numeric.binary.dotlin"
    },
    "boolean-literal": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.dotlin"
    },
    "null-literal": {
      "match": "\\bnull\\b",
      "name": "constant.language.null.dotlin"
    },
    "lambda-arrow": {
      "match": "->",
      "name": "storage.type.function.arrow.dotlin"
    },
    "operators": {
      "patterns": [
        {
          "match": "(===?|\\!==?|<=|>=|<|>)",
          "name": "keyword.operator.comparison.dotlin"
        },
        {
          "match": "([+*/%-]=)",
          "name": "keyword.operator.assignment.arithmetic.dotlin"
        },
        {
          "match": "(=)",
          "name": "keyword.operator.assignment.dotlin"
        },
        {
          "match": "([+*/%-])",
          "name": "keyword.operator.arithmetic.dotlin"
        },
        {
          "match": "(!|&&|\\|\\|)",
          "name": "keyword.operator.logical.dotlin"
        },
        {
          "match": "(--|\\+\\+)",
          "name": "keyword.operator.increment-decrement.dotlin"
        },
        {
          "match": "(\\.\\.)",
          "name": "keyword.operator.range.dotlin"
        }
      ]
    },
    "self-reference": {
      "match": "\\b(this|super)(@\\w+)?\\b",
      "name": "variable.language.this.dotlin"
    }
  }
}
